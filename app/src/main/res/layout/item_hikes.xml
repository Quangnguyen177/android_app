<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/img_avatar"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_hikeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hike 1"
            android:textColor="@color/black"
            android:textSize="16sp"></TextView>
        <TextView
            android:id="@+id/tv_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Length: 10km"
            android:textColor="@color/black"
            android:textSize="16sp"></TextView>
        <TextView
            android:id="@+id/tv_timeCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6:00 am"
            android:textColor="@color/black"
            android:textSize="16sp"></TextView>
        <TextView
            android:id="@+id/tv_timeDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7:00 am"
            android:textColor="@color/black"
            android:textSize="16sp"></TextView>
        <TextView
            android:id="@+id/tv_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not good"
            android:textColor="@color/black"
            android:textSize="16sp"></TextView>

        <Button
            android:id="@+id/btn_editHike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"></Button>
        <Button
            android:id="@+id/btn_deleteHike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"></Button>

    </LinearLayout>






</RelativeLayout>